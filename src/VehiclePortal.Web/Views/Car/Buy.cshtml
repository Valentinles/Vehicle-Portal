@model VehiclePortal.Common.ViewModels.CarDetailsViewModel
@{
    ViewData["Title"] = "Buy";
}

<h1 class="display-4 text-center"><i class="fas fa-shopping-cart" style="color: darkorange"></i> Buy</h1>

<div class="row">
    <div class="mx-auto">
        <img src="@Model.SmallImageUrl" class="mx-auto d-block" />

        <h3 class="text-center">@Model.Brand @Model.CarModel</h3>
        <hr />
        <h4 class="text-center">@Model.Price$</h4>
        <div class="form-group text-center">
            @await Html.PartialAsync("_BuyPartial", new VehiclePortal.Common.ViewModels.BuyCarBindingModel
                  {
                      CarId = Model.Id
                  })
        </div>
    </div>
</div>
