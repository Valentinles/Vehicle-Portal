@model VehiclePortal.Common.ViewModels.AddFundsBindingModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<VehiclePortal.Models.VehiclePortalUser> UserManager
@{
    ViewData["Title"] = "AddFunds";
}

<h1 class="display-4 text-center"><i class="fas fa-credit-card" style="color: darkorange"></i> Add Funds</h1>
<h5 class="text-center" style="padding-top:50px;">@User.Identity.Name's Balance</h5>
<h5 class="text-center">
    <i class="fas fa-money-bill-alt" style="color:darkorange;"></i>
    @UserManager.GetUserAsync(User).Result.Balance
</h5>
<hr class="w-50" />
<form asp-area="" asp-controller="User" asp-action="AddFunds">
    <div class="form-group mx-auto w-25 text-center">
        <input asp-for="Balance" placeholder="Enter amount" class="form-control text-center" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Transfer" class="btn text-light" style="background-color:darkorange;" />
    </div>
</form>

