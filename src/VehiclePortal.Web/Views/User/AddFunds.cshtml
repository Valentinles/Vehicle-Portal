@model VehiclePortal.Common.ViewModels.AddFundsBindingModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<VehiclePortal.Models.VehiclePortalUser> UserManager
@{
    ViewData["Title"] = "AddFunds";
}

<h1>AddFunds</h1>
<h5>
    @UserManager.GetUserAsync(User).Result.Balance
</h5>
<form asp-area="" asp-controller="User" asp-action="AddFunds">
    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-outline-success" />
    </div>
</form>

